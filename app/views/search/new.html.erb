
  


<% if flash[:alert] %>
  <aside> <%= flash[:alert] %> </aside>
<% end %>
<div class="container">
  <br/>
	<div class="row justify-content-center">


    <div class="col-12 col-md-10 col-lg-8">
      <%= form_tag ({:class => 'card card-sm'}) do %>
        <div class="card-body row no-gutters align-items-center">

          <div class="col-auto">
              <i class="fas fa-search h4 text-body"></i>
          </div>

          <div class='col'>
          <%= label_tag :title, 'Enter title to Search' %>
          <%= text_field_tag :title, params[:title],class:'form-control form-control-lg form-control-borderless',placeholder:'search topics' %>
          </div>

          <br>
          <div class="col-auto"> 
            <%= submit_tag "Search",class: 'btn btn-success' %>
          </div>

        </div>

      <% end %>
    </div>


  </div>
</div>



