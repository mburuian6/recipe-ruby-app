<% if is_owner(@post) %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <td><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>

  

<%= link_to 'Home', posts_path %>
<%= link_to 'Search Post', search_path %>

<h2> Comments </h2>
What do you think?
<%= render 'comments/form' %>



<% unless @post.comments.blank? %>
  <% @post.comments.each do |comment| %>
    <p>
      <strong>
        <%= link_to comment.user_id, user_details_show_path(user: comment.user) %>
      </strong> 
      <%= comment.body %>
      <% if is_owner(comment) %>
        <%= link_to 'Destroy Comment', post_comment_path(@post,comment), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </p>
  <% end %>

  
  
<% end %>

  

 







