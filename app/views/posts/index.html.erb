
<nav class="navbar navbar-light bg-white">
        <a href="#" class="navbar-brand">Posts</a>
</nav>

<h2> <%= link_to 'Search', search_url %> </h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Ingredients</th>
      <th>Procedure</th>
      <th>Serves</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td><%= post.ingredients %></td>
        <td><%= post.procedure %></td>
        <td><%= post.serves %></td>
        <td><%= link_to post.user.user_name , user_details_show_path(user: post.user) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
