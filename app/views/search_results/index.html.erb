<h1>Search Results</h1>

<div class="recipes">
  <% @posts.each do |post| %>
      
    <div class="recipe">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= link_to truncate(post.title), 
          post_path(post.id) %> </h3>
        
          Serves <%= post.serves %>
          <h5><%= post.ingredients.to_plain_text.truncate(50) %> </h5>
          <p> <%= post.procedure.to_plain_text.truncate(50) %>  </p>
          <a href="#"><%= link_to post.user.user_name , 
            user_details_show_path(user: post.user) %></a>
        </div>
        <div>
          <i>
            Created: <%= post.updated_at.to_formatted_s(:long) %>
          </i>
        </div>
      </div>
    </div>

  <% end %>
</div>

