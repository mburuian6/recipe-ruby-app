
<div class="container">
	<div class="row">
		<div class="col-md-12 col-lg-6">
      <div class="well profile">
        <div class="col-sm-12">
          <div class="col-xs-12 col-sm-8">
            <h2><%= current_user.name %></h2>
            <p><%= current_user.user_name %></p>
              <button class='btn btn-default'>
                <% if is_profile_owner(@user) %>
                  <%= link_to 'Edit Profile', 
                    edit_user_registration_path, 
                    :class => 'navbar-link' %>
                <% end %> 
              </button> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>  

<% if @posts.blank? %>
  0 posts.
<% else %>
  <br/>
  <h3>Posts by <%= current_user.user_name %>:</h3>
<% end %>



<div class="recipes">
  <% @posts.each do |post| %>
      
    <div class="recipe">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= link_to truncate(post.title), 
          post_path(post.id) %> </h3>
        
          Serves <%= post.serves %>
          <h5><%= post.ingredients.to_plain_text.truncate(50) %> </h5>
          <p> <%= post.procedure.to_plain_text.truncate(50) %>  </p>
          
        </div>
        <div>
          <i>
            Created: <%= post.updated_at.to_formatted_s(:long) %>
          </i>
        </div>
      </div>
    </div>

  <% end %>
</div>


