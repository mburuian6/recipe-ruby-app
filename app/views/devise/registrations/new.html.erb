<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:class => 'row g-3') do |f| %>
  <!-- <div class="alert alert-success" role="alert"> -->
    <%= render "devise/shared/error_messages", resource: resource %>
  <!-- </div> -->

  <div class="field col-md-6">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field col-md-6 ">
      <%= f.label :user_name, class: 'form-label'%>
      
      <div class="input-group">
        <span class="input-group-addon">@</span>
        <%= f.text_field :user_name, autofocus: true, class: 'form-control' %>
      </div>

  </div>

  <div class="field col-md-12">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field col-md-6">
    <%= f.label :password, class:"field form-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
  </div>

  <div class="field col-md-6">
    <%= f.label :password_confirmation , class:"field form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
  </div>

  
  <div class="actions col-md-3">
    <br>
    <%= f.submit "Sign up" , class:'btn btn-default' %>
  </div>
<% end %>

