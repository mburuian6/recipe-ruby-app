<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class:'form-group') do |f| %>
  <div class="col-md-12">
    <div class="field col-md-4">
      <%= f.label :email , class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'form-control login-email' %>
    </div>
  </div>

  <div class="col-md-12">
    <div class="field col-md-4">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "current-password" , class: 'form-control login-password'%>
    </div>
  </div>

  <div class="col-md-12">
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>  
  </div>
  
  <div class="actions col-md-12">
    <%= f.submit "Log in" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
